{
  "version": 2,
  "regions": ["all"],
  "routes": [
    { "src": "/docs/(.*)", "status": 301, "headers": { "Location": "/$1" } },
    { "src": "/builder", "dest": "/builder.html" },
    { "src": "/(?<name>[^/]+).*", "dest": "/api/$name.ts" }
  ],
  "functions": {
    "api/*.ts": {
      "memory": 512
    }
  },
  "env": {
    "GH_TOKENS": "@badgen-gh-tokens",
    "SENTRY_DSN": "@badgen-sentry-dsn",
    "TRACKING_GA": "@badgen-tracking-ga"
  }
}
